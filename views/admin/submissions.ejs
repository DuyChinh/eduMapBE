<%- include('../partials/header', { title: 'Submissions Management', currentPage: 'submissions', user: user }) %>

<div class="submissions-page">
    <div class="page-header mb-3">
        <div class="page-actions">
            <button class="btn btn-primary" onclick="refreshSubmissions()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" onsubmit="filterSubmissions(event)">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="status" id="statusFilter" class="form-select">
                            <option value="">All</option>
                            <option value="graded">Graded</option>
                            <option value="submitted">Submitted</option>
                            <option value="late">Late</option>
                            <option value="in-progress">In Progress</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" id="searchFilter" class="form-control" placeholder="Student or exam name...">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Submissions Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Submissions List (<span><%= submissions.length || 0 %></span>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Student</th>
                            <th>Exam</th>
                            <th>Status</th>
                            <th>Score</th>
                            <th>Percentage</th>
                            <th>Time Spent</th>
                            <th>Submitted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (submissions && submissions.length > 0) { %>
                            <% submissions.forEach(sub => { %>
                                <tr>
                                    <td><code><%= sub._id.toString().substring(0, 8) %>...</code></td>
                                    <td><%= sub.userId ? (sub.userId.name || sub.userId.email || 'N/A') : 'N/A' %></td>
                                    <td><%= sub.examId ? (sub.examId.name || 'N/A') : 'N/A' %></td>
                                    <td>
                                        <span class="badge bg-<%= sub.status === 'graded' ? 'success' : sub.status === 'submitted' ? 'primary' : sub.status === 'late' ? 'warning' : 'secondary' %>">
                                            <%= sub.status === 'graded' ? 'Graded' : sub.status === 'submitted' ? 'Submitted' : sub.status === 'late' ? 'Late' : 'In Progress' %>
                                        </span>
                                    </td>
                                    <td><%= sub.score || 0 %> / <%= sub.maxScore || 0 %></td>
                                    <td><%= sub.percentage || 0 %>%</td>
                                    <td><%= Math.floor((sub.timeSpent || 0) / 60) %> minutes</td>
                                    <td><% 
                                        if (sub.submittedAt) {
                                            const subDate = new Date(sub.submittedAt);
                                            const day = String(subDate.getDate()).padStart(2, '0');
                                            const month = String(subDate.getMonth() + 1).padStart(2, '0');
                                            const year = subDate.getFullYear();
                                            %><%= `${day}/${month}/${year}` %><% } else { %>N/A<% } %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/submissions/<%= sub._id %>" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/submissions/<%= sub._id %>/edit" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" onclick="deleteSubmission('<%= sub._id %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="text-center">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Bootstrap Pagination -->
            <% if (pagination && pagination.pages > 1) { %>
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page - 1 %>)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        <% 
                            let startPage = Math.max(1, pagination.page - 2);
                            let endPage = Math.min(pagination.pages, pagination.page + 2);
                            for (let i = startPage; i <= endPage; i++) { 
                        %>
                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page + 1 %>)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPage = <%= pagination?.page || 1 %>;
    let currentFilters = {};

    function filterSubmissions(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        currentFilters = {
            status: formData.get('status') || '',
            search: formData.get('search') || ''
        };
        currentPage = 1;
        loadSubmissions();
    }

    function clearFilters() {
        document.getElementById('statusFilter').value = '';
        document.getElementById('searchFilter').value = '';
        currentFilters = {};
        currentPage = 1;
        loadSubmissions();
    }

    function goToPage(page) {
        currentPage = page;
        loadSubmissions();
    }

    function loadSubmissions() {
        const params = new URLSearchParams({ page: currentPage, ...currentFilters });
        window.location.href = `/admin/submissions?${params.toString()}`;
    }

    function refreshSubmissions() {
        loadSubmissions();
    }

    function deleteSubmission(submissionId) {
        if (!confirm('Are you sure you want to delete this submission? This action cannot be undone.')) {
            return;
        }

        fetch(`/v1/api/admin/submissions/${submissionId}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${getToken()}`
            }
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                showNotification('Submission deleted successfully!', 'success');
                loadSubmissions();
            } else {
                showNotification('Error: ' + (data.message || 'Unknown error'), 'danger');
            }
        })
        .catch(err => {
            console.error('Error deleting submission:', err);
            showNotification('Error: ' + (err.message || 'Failed to delete submission'), 'danger');
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>
