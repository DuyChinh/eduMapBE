<%- include('../partials/header', { title: title, currentPage: 'chat-history', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Chat History</h2>
        <a href="/admin/chat-history" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Chat History
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">History Information</h5>
        </div>
        <div class="card-body">
            <form id="editHistoryForm" onsubmit="saveHistory(event)">
                <input type="hidden" id="editHistoryId" value="<%= history._id %>">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Message</label>
                        <textarea id="editHistoryMessage" class="form-control" rows="5" required><%= history.message || '' %></textarea>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="editHistoryIsError" <%= history.isError ? 'checked' : '' %>>
                            <label class="form-check-label" for="editHistoryIsError">Is Error</label>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="/admin/chat-history" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function saveHistory(e) {
        e.preventDefault();
        const historyId = document.getElementById('editHistoryId').value;
        const formData = {
            message: document.getElementById('editHistoryMessage').value,
            isError: document.getElementById('editHistoryIsError').checked
        };

        fetch(`/v1/api/admin/chat-history/${historyId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getToken()}`
            },
            body: JSON.stringify(formData)
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                showNotification('History updated successfully!', 'success');
                window.location.href = '/admin/chat-history';
            } else {
                showNotification('Error: ' + (data.message || 'Unknown error'), 'danger');
            }
        })
        .catch(err => {
            console.error('Error updating history:', err);
            showNotification('Error: ' + (err.message || 'Failed to update history. Please check console for details.'), 'danger');
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>

