<%- include('../partials/header', { title: title, currentPage: 'organizations', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Organization</h2>
        <a href="/admin/organizations/<%= organization._id %>" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Detail
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Organization Information</h5>
        </div>
        <div class="card-body">
            <form id="editOrgForm" onsubmit="saveOrganization(event)">
                <input type="hidden" id="editOrgId" value="<%= organization._id %>">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="editOrgName" class="form-control" value="<%= organization.name || '' %>" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Domain</label>
                        <input type="text" id="editOrgDomain" class="form-control" value="<%= organization.domain || '' %>">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Plan</label>
                        <select id="editOrgPlan" class="form-select" required>
                            <option value="free" <%= organization.plan === 'free' ? 'selected' : '' %>>Free</option>
                            <option value="pro" <%= organization.plan === 'pro' ? 'selected' : '' %>>Pro</option>
                            <option value="enterprise" <%= organization.plan === 'enterprise' ? 'selected' : '' %>>Enterprise</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Max Students</label>
                        <input type="number" id="editOrgMaxStudents" class="form-control" value="<%= organization.settings?.maxStudents || 100 %>" min="1">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Max Exams</label>
                        <input type="number" id="editOrgMaxExams" class="form-control" value="<%= organization.settings?.maxExams || 10 %>" min="1">
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="/admin/organizations/<%= organization._id %>" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function saveOrganization(e) {
        e.preventDefault();
        const orgId = document.getElementById('editOrgId').value;
        const formData = {
            name: document.getElementById('editOrgName').value,
            domain: document.getElementById('editOrgDomain').value,
            plan: document.getElementById('editOrgPlan').value,
            settings: {
                maxStudents: parseInt(document.getElementById('editOrgMaxStudents').value),
                maxExams: parseInt(document.getElementById('editOrgMaxExams').value)
            }
        };

        fetch(`/v1/api/admin/organizations/${orgId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getToken()}`
            },
            body: JSON.stringify(formData)
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                alert('Organization updated successfully!');
                window.location.href = `/admin/organizations/${orgId}`;
            } else {
                alert('Error: ' + (data.message || 'Unknown error'));
            }
        })
        .catch(err => {
            console.error('Error updating organization:', err);
            alert('Error: ' + (err.message || 'Failed to update organization. Please check console for details.'));
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>

