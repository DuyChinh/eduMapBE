<%- include('../partials/header', { title: title, currentPage: 'questions', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Question Details</h2>
        <div>
            <a href="/admin/questions/<%= question._id %>/edit" class="btn btn-primary me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/admin/questions" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Questions
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Question Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>ID:</strong><br>
                    <code><%= question._id %></code>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Name:</strong><br>
                    <%= question.name || 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Type:</strong><br>
                    <span class="badge bg-info"><%= question.type || 'mcq' %></span>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Owner:</strong><br>
                    <%= question.ownerId ? (question.ownerId.name || question.ownerId.email || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Subject:</strong><br>
                    <%= question.subjectId ? (question.subjectId.name || question.subjectId.code || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Level:</strong><br>
                    <%= question.level || 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Is Public:</strong><br>
                    <span class="badge bg-<%= question.isPublic ? 'success' : 'secondary' %>">
                        <%= question.isPublic ? 'Yes' : 'No' %>
                    </span>
                </div>
                <div class="col-md-12 mb-3">
                    <strong>Text:</strong><br>
                    <div class="border p-3 rounded bg-light">
                        <%= question.text || 'N/A' %>
                    </div>
                </div>
                <% if (question.choices && question.choices.length > 0) { %>
                    <div class="col-md-12 mb-3">
                        <strong>Choices:</strong><br>
                        <ul class="list-group">
                            <% question.choices.forEach((choice, index) => { %>
                                <li class="list-group-item">
                                    <strong><%= choice.key || (index + 1) %>:</strong> <%= choice.text || choice %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>
                <div class="col-md-12 mb-3">
                    <strong>Answer:</strong><br>
                    <code><%= JSON.stringify(question.answer) %></code>
                </div>
                <% if (question.explanation) { %>
                    <div class="col-md-12 mb-3">
                        <strong>Explanation:</strong><br>
                        <div class="border p-3 rounded bg-light">
                            <%= question.explanation %>
                        </div>
                    </div>
                <% } %>
                <% if (question.tags && question.tags.length > 0) { %>
                    <div class="col-md-12 mb-3">
                        <strong>Tags:</strong><br>
                        <% question.tags.forEach(tag => { %>
                            <span class="badge bg-secondary me-1"><%= tag %></span>
                        <% }); %>
                    </div>
                <% } %>
                <div class="col-md-6 mb-3">
                    <strong>Created At:</strong><br>
                    <% 
                        const qCreated = new Date(question.createdAt);
                        const day = String(qCreated.getDate()).padStart(2, '0');
                        const month = String(qCreated.getMonth() + 1).padStart(2, '0');
                        const year = qCreated.getFullYear();
                        const hours = String(qCreated.getHours()).padStart(2, '0');
                        const minutes = String(qCreated.getMinutes()).padStart(2, '0');
                        const seconds = String(qCreated.getSeconds()).padStart(2, '0');
                    %><%= `${day}/${month}/${year} ${hours}:${minutes}:${seconds}` %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Updated At:</strong><br>
                    <% 
                        const qUpdated = new Date(question.updatedAt);
                        const day = String(qUpdated.getDate()).padStart(2, '0');
                        const month = String(qUpdated.getMonth() + 1).padStart(2, '0');
                        const year = qUpdated.getFullYear();
                        const hours = String(qUpdated.getHours()).padStart(2, '0');
                        const minutes = String(qUpdated.getMinutes()).padStart(2, '0');
                        const seconds = String(qUpdated.getSeconds()).padStart(2, '0');
                    %><%= `${day}/${month}/${year} ${hours}:${minutes}:${seconds}` %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

