<%- include('../partials/header', { title: 'Mindmaps Management', currentPage: 'mindmaps', user: user }) %>

<div class="mindmaps-page">
    <div class="page-header mb-3">
        <div class="page-actions">
            <button class="btn btn-primary" onclick="refreshMindmaps()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" onsubmit="filterMindmaps(event)">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" id="searchFilter" class="form-control" placeholder="Title or description...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="status" id="statusFilter" class="form-select">
                            <option value="">All</option>
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Mindmaps Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Mindmaps List (<span id="totalMindmaps"><%= mindmaps.length || 0 %></span>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Favorite</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (mindmaps && mindmaps.length > 0) { %>
                            <% mindmaps.forEach(mindmap => { %>
                                <tr class="<%= mindmap.deleted_at ? 'table-secondary' : '' %>">
                                    <td><code><%= mindmap._id.toString().substring(0, 12) %>...</code></td>
                                    <td>
                                        <%= mindmap.title || 'Untitled' %>
                                        <% if (mindmap.deleted_at) { %>
                                            <span class="badge bg-danger ms-1">Deleted</span>
                                        <% } %>
                                    </td>
                                    <td><%= mindmap.desc ? (mindmap.desc.length > 50 ? mindmap.desc.substring(0, 50) + '...' : mindmap.desc) : 'N/A' %></td>
                                    <td><%= mindmap.user ? (mindmap.user.name || mindmap.user.email) : 'N/A' %></td>
                                    <td>
                                        <% if (mindmap.status) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (mindmap.favorite) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } else { %>
                                            <i class="far fa-star text-muted"></i>
                                        <% } %>
                                    </td>
                                    <td><%= mindmap.created_at ? new Date(mindmap.created_at).toLocaleDateString('en-US') : 'N/A' %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/mindmaps/<%= mindmap._id %>" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/mindmaps/<%= mindmap._id %>/edit" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" onclick="deleteMindmap('<%= mindmap._id %>', '<%= mindmap.title || mindmap._id %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No mindmaps found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Bootstrap Pagination -->
            <% if (pagination && pagination.pages > 1) { %>
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page - 1 %>)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        <% 
                            let startPage = Math.max(1, pagination.page - 2);
                            let endPage = Math.min(pagination.pages, pagination.page + 2);
                            for (let i = startPage; i <= endPage; i++) { 
                        %>
                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page + 1 %>)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPage = <%= pagination?.page || 1 %>;
    let currentFilters = {};

    function filterMindmaps(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        currentFilters = {
            search: formData.get('search') || '',
            status: formData.get('status') || ''
        };
        currentPage = 1;
        loadMindmaps();
    }

    function clearFilters() {
        document.getElementById('searchFilter').value = '';
        document.getElementById('statusFilter').value = '';
        currentFilters = {};
        currentPage = 1;
        loadMindmaps();
    }

    function goToPage(page) {
        currentPage = page;
        loadMindmaps();
    }

    function loadMindmaps() {
        const params = new URLSearchParams({ page: currentPage, ...currentFilters });
        window.location.href = `/admin/mindmaps?${params.toString()}`;
    }

    function refreshMindmaps() {
        loadMindmaps();
    }

    function deleteMindmap(mindmapId, mindmapTitle) {
        if (!confirm(`Are you sure you want to delete mindmap "${mindmapTitle}"? This action cannot be undone!`)) return;
        fetch(`/v1/api/admin/mindmaps/${mindmapId}?permanent=true`, {
            method: 'DELETE',
            headers: { 'Authorization': `Bearer ${getToken()}` }
        })
        .then(res => res.json())
        .then(data => {
            if (data.ok) {
                showNotification('Mindmap deleted successfully!', 'success');
                setTimeout(() => loadMindmaps(), 800);
            } else {
                showNotification('Error: ' + data.message, 'danger');
            }
        })
        .catch(err => {
            console.error('Error deleting mindmap:', err);
            showNotification('Error deleting mindmap', 'danger');
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>
