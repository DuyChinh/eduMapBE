<%- include('../partials/header', { title: 'Proctor Logs Management', currentPage: 'proctor-logs', user: user }) %>

<div class="proctor-logs-page">
    <div class="page-header mb-3">
        <div class="page-actions">
            <button class="btn btn-primary" onclick="refreshLogs()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" onsubmit="filterLogs(event)">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Event</label>
                        <select name="event" id="eventFilter" class="form-select">
                            <option value="">All</option>
                            <option value="visibility">Visibility</option>
                            <option value="fullscreen">Fullscreen</option>
                            <option value="beforeunload">Before Unload</option>
                            <option value="warning">Warning</option>
                            <option value="tab_switch">Tab Switch</option>
                            <option value="copy_paste">Copy Paste</option>
                            <option value="right_click">Right Click</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Severity</label>
                        <select name="severity" id="severityFilter" class="form-select">
                            <option value="">All</option>
                            <option value="low">Low</option>
                            <option value="medium">Medium</option>
                            <option value="high">High</option>
                            <option value="critical">Critical</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" id="searchFilter" class="form-control" placeholder="Search...">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Proctor Logs Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Proctor Logs List (<span id="totalLogs"><%= logs.length || 0 %></span>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Event</th>
                            <th>Severity</th>
                            <th>User</th>
                            <th>Submission</th>
                            <th>Organization</th>
                            <th>Timestamp</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (logs && logs.length > 0) { %>
                            <% logs.forEach(log => { %>
                                <tr>
                                    <td><code><%= log._id.toString().substring(0, 8) %>...</code></td>
                                    <td>
                                        <span class="badge bg-info">
                                            <%= log.event || 'N/A' %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= log.severity === 'critical' ? 'danger' : log.severity === 'high' ? 'warning' : log.severity === 'medium' ? 'info' : 'secondary' %>">
                                            <%= log.severity ? log.severity.charAt(0).toUpperCase() + log.severity.slice(1) : 'Low' %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= log.userId ? (log.userId.name || 'N/A') : 'N/A' %>
                                        <% if (log.userId && log.userId.email) { %>
                                            <br><small class="text-muted"><%= log.userId.email %></small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (log.submissionId) { %>
                                            <code><%= log.submissionId._id ? log.submissionId._id.toString().substring(0, 8) : 'N/A' %>...</code>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td><%= log.orgId ? (log.orgId.name || 'N/A') : 'N/A' %></td>
                                    <td>
                                        <% 
                                            const logtslogcr = new Date(log.ts || log.createdAt);
                                            const day = String(logtslogcr.getDate()).padStart(2, '0');
                                            const month = String(logtslogcr.getMonth() + 1).padStart(2, '0');
                                            const year = logtslogcr.getFullYear();
                                            const hours = String(logtslogcr.getHours()).padStart(2, '0');
                                            const minutes = String(logtslogcr.getMinutes()).padStart(2, '0');
                                            const seconds = String(logtslogcr.getSeconds()).padStart(2, '0');
                                        %>
                                        <%= `${day}/${month}/${year} ${hours}:${minutes}:${seconds}` %>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/proctor-logs/<%= log._id %>" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" onclick="deleteLog('<%= log._id %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Bootstrap Pagination -->
            <% if (pagination && pagination.pages > 1) { %>
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page - 1 %>)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        <% 
                            let startPage = Math.max(1, pagination.page - 2);
                            let endPage = Math.min(pagination.pages, pagination.page + 2);
                            for (let i = startPage; i <= endPage; i++) { 
                        %>
                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page + 1 %>)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPage = <%= pagination?.page || 1 %>;
    let currentFilters = {};

    function filterLogs(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        currentFilters = {
            event: formData.get('event') || '',
            severity: formData.get('severity') || '',
            search: formData.get('search') || ''
        };
        currentPage = 1;
        loadLogs();
    }

    function clearFilters() {
        document.getElementById('eventFilter').value = '';
        document.getElementById('severityFilter').value = '';
        document.getElementById('searchFilter').value = '';
        currentFilters = {};
        currentPage = 1;
        loadLogs();
    }

    function goToPage(page) {
        currentPage = page;
        loadLogs();
    }

    function loadLogs() {
        const params = new URLSearchParams({ page: currentPage, ...currentFilters });
        window.location.href = `/admin/proctor-logs?${params.toString()}`;
    }

    function refreshLogs() {
        loadLogs();
    }

    function deleteLog(logId) {
        if (!confirm('Are you sure you want to delete this proctor log?')) return;
        fetch(`/v1/api/admin/proctor-logs/${logId}`, {
            method: 'DELETE',
            headers: { 'Authorization': `Bearer ${getToken()}` }
        })
        .then(res => res.json())
        .then(data => {
            if (data.ok) {
                showNotification('Proctor log deleted successfully!', 'success');
                setTimeout(() => {
                    loadLogs();
                }, 800);
            } else {
                showNotification('Error: ' + data.message, 'danger');
            }
        })
        .catch(err => {
            console.error('Error deleting proctor log:', err);
            showNotification('Error deleting proctor log', 'danger');
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>


