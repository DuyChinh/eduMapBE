<%- include('../partials/header', { title: title, currentPage: 'chat-history', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chat History Details</h2>
        <div>
            <a href="/admin/chat-history/<%= history._id %>/edit" class="btn btn-primary me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/admin/chat-history" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Chat History
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">History Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>ID:</strong><br>
                    <code><%= history._id %></code>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>User:</strong><br>
                    <%= history.userId ? (history.userId.name || history.userId.email || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Session:</strong><br>
                    <%= history.sessionId ? (history.sessionId.title || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Sender:</strong><br>
                    <span class="badge bg-<%= history.sender === 'user' ? 'primary' : 'success' %>">
                        <%= history.sender === 'user' ? 'User' : 'Bot' %>
                    </span>
                </div>
                <div class="col-md-12 mb-3">
                    <strong>Message:</strong><br>
                    <div class="border p-3 rounded bg-light">
                        <%= history.message || 'N/A' %>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Is Error:</strong><br>
                    <span class="badge bg-<%= history.isError ? 'danger' : 'success' %>">
                        <%= history.isError ? 'Error' : 'OK' %>
                    </span>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Attachments:</strong><br>
                    <%= history.attachments && history.attachments.length > 0 ? history.attachments.length + ' file(s)' : 'None' %>
                </div>
                <% if (history.attachments && history.attachments.length > 0) { %>
                    <div class="col-md-12 mb-3">
                        <strong>Attachment Details:</strong><br>
                        <ul>
                            <% history.attachments.forEach(att => { %>
                                <li>
                                    <strong>Type:</strong> <%= att.type %> | 
                                    <strong>Name:</strong> <%= att.name || 'N/A' %> | 
                                    <strong>URL:</strong> <a href="<%= att.url %>" target="_blank"><%= att.url %></a>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>
                <div class="col-md-6 mb-3">
                    <strong>Created At:</strong><br>
                    <%= new Date(history.createdAt).toLocaleString('en-US') %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Updated At:</strong><br>
                    <%= new Date(history.updatedAt).toLocaleString('en-US') %>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>

