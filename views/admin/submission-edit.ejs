<%- include('../partials/header', { title: title, currentPage: 'submissions', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Submission</h2>
        <a href="/admin/submissions" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Submissions
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Submission Information</h5>
        </div>
        <div class="card-body">
            <form id="editSubmissionForm" onsubmit="saveSubmission(event)">
                <input type="hidden" id="editSubmissionId" value="<%= submission._id %>">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Status</label>
                        <select id="editSubmissionStatus" class="form-select" required>
                            <option value="in-progress" <%= submission.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="submitted" <%= submission.status === 'submitted' ? 'selected' : '' %>>Submitted</option>
                            <option value="graded" <%= submission.status === 'graded' ? 'selected' : '' %>>Graded</option>
                            <option value="late" <%= submission.status === 'late' ? 'selected' : '' %>>Late</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Score</label>
                        <input type="number" id="editSubmissionScore" class="form-control" value="<%= submission.score || 0 %>" min="0" step="0.01">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Percentage</label>
                        <input type="number" id="editSubmissionPercentage" class="form-control" value="<%= submission.percentage || 0 %>" min="0" max="100" step="0.01">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Time Spent (seconds)</label>
                        <input type="number" id="editSubmissionTimeSpent" class="form-control" value="<%= submission.timeSpent || 0 %>" min="0">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Submitted At</label>
                        <input type="datetime-local" id="editSubmissionSubmittedAt" class="form-control" value="<%= submission.submittedAt ? new Date(submission.submittedAt).toISOString().slice(0, 16) : '' %>">
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="/admin/submissions" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function saveSubmission(e) {
        e.preventDefault();
        const submissionId = document.getElementById('editSubmissionId').value;
        const formData = {
            status: document.getElementById('editSubmissionStatus').value,
            score: parseFloat(document.getElementById('editSubmissionScore').value) || 0,
            percentage: parseFloat(document.getElementById('editSubmissionPercentage').value) || 0,
            timeSpent: parseInt(document.getElementById('editSubmissionTimeSpent').value) || 0
        };

        const submittedAt = document.getElementById('editSubmissionSubmittedAt').value;
        if (submittedAt) {
            formData.submittedAt = new Date(submittedAt).toISOString();
        }

        fetch(`/v1/api/admin/submissions/${submissionId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getToken()}`
            },
            body: JSON.stringify(formData)
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                showNotification('Submission updated successfully!', 'success');
                setTimeout(() => {
                    window.location.href = '/admin/submissions';
                }, 800);
            } else {
                showNotification('Error: ' + (data.message || 'Unknown error'), 'danger');
            }
        })
        .catch(err => {
            console.error('Error updating submission:', err);
            showNotification('Error: ' + (err.message || 'Failed to update submission. Please check console for details.'), 'danger');
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>

