<%- include('../partials/header', { title: 'Chat History Management', currentPage: 'chat-history', user: user }) %>

<div class="users-page">
    <div class="page-header mb-3">
        <div class="page-actions">
            <button class="btn btn-primary" onclick="refreshHistory()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" onsubmit="filterHistory(event)">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Session ID</label>
                        <input type="text" name="sessionId" id="sessionIdFilter" class="form-control" placeholder="Session ID...">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" id="searchFilter" class="form-control" placeholder="Message...">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- History Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Chat History List (<span id="totalHistory"><%= history.length || 0 %></span>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Session</th>
                            <th>Sender</th>
                            <th>Message</th>
                            <th>Attachments</th>
                            <th>Is Error</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (history && history.length > 0) { %>
                            <% history.forEach(item => { %>
                                <tr>
                                    <td><code><%= item._id.toString().substring(0, 8) %>...</code></td>
                                    <td>
                                        <% if (item.userId) { %>
                                            <%= item.userId.name || item.userId.email || 'N/A' %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (item.sessionId) { %>
                                            <%= (item.sessionId.title || 'Session').substring(0, 20) %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= item.sender === 'user' ? 'primary' : 'success' %>">
                                            <%= item.sender === 'user' ? 'User' : 'Bot' %>
                                        </span>
                                    </td>
                                    <td><%= (item.message || '').substring(0, 50) %><%= (item.message && item.message.length > 50) ? '...' : '' %></td>
                                    <td>
                                        <% if (item.attachments && item.attachments.length > 0) { %>
                                            <span class="badge bg-info"><%= item.attachments.length %> file(s)</span>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (item.isError) { %>
                                            <span class="badge bg-danger">Error</span>
                                        <% } else { %>
                                            <span class="badge bg-success">OK</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(item.createdAt).toLocaleString('en-US') %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/chat-history/<%= item._id %>" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/chat-history/<%= item._id %>/edit" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" onclick="deleteHistory('<%= item._id %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="text-center">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Bootstrap Pagination -->
            <% if (pagination && pagination.pages > 1) { %>
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page - 1 %>)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        <% 
                            let startPage = Math.max(1, pagination.page - 2);
                            let endPage = Math.min(pagination.pages, pagination.page + 2);
                            for (let i = startPage; i <= endPage; i++) { 
                        %>
                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page + 1 %>)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPage = <%= pagination?.page || 1 %>;
    let currentFilters = {};

    function filterHistory(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        currentFilters = {
            search: formData.get('search') || '',
            sessionId: formData.get('sessionId') || ''
        };
        currentPage = 1;
        loadHistory();
    }

    function clearFilters() {
        document.getElementById('searchFilter').value = '';
        document.getElementById('sessionIdFilter').value = '';
        currentFilters = {};
        currentPage = 1;
        loadHistory();
    }

    function goToPage(page) {
        currentPage = page;
        loadHistory();
    }

    function loadHistory() {
        const params = new URLSearchParams({ page: currentPage, ...currentFilters });
        window.location.href = `/admin/chat-history?${params.toString()}`;
    }

    function refreshHistory() {
        loadHistory();
    }


    function deleteHistory(historyId) {
        if (!confirm('Are you sure you want to delete this chat history?')) return;
        fetch(`/v1/api/admin/chat-history/${historyId}`, {
            method: 'DELETE',
            headers: { 'Authorization': `Bearer ${getToken()}` }
        })
        .then(res => res.json())
        .then(data => {
            if (data.ok) {
                alert('History deleted successfully!');
                loadHistory();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(err => alert('Error deleting history'));
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>
