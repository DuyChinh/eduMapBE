<%- include('../partials/header', { title: title, currentPage: 'submissions', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Submission Details</h2>
        <div>
            <button class="btn btn-danger me-2" onclick="deleteSubmission('<%= submission._id %>')">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a href="/admin/submissions" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Submissions
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Submission Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>ID:</strong><br>
                    <code><%= submission._id %></code>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Student:</strong><br>
                    <%= submission.userId ? (submission.userId.name || submission.userId.email || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Exam:</strong><br>
                    <%= submission.examId ? (submission.examId.name || 'N/A') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Status:</strong><br>
                    <span class="badge bg-<%= submission.status === 'graded' ? 'success' : submission.status === 'submitted' ? 'primary' : submission.status === 'late' ? 'warning' : 'secondary' %>">
                        <%= submission.status === 'graded' ? 'Graded' : submission.status === 'submitted' ? 'Submitted' : submission.status === 'late' ? 'Late' : 'In Progress' %>
                    </span>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Score:</strong><br>
                    <%= submission.score || 0 %> / <%= submission.maxScore || 0 %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Percentage:</strong><br>
                    <%= submission.percentage || 0 %>%
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Time Spent:</strong><br>
                    <%= Math.floor((submission.timeSpent || 0) / 60) %> minutes
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Started At:</strong><br>
                    <%= submission.startedAt ? new Date(submission.startedAt).toLocaleString('en-US') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Submitted At:</strong><br>
                    <%= submission.submittedAt ? new Date(submission.submittedAt).toLocaleString('en-US') : 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Created At:</strong><br>
                    <%= new Date(submission.createdAt).toLocaleString('en-US') %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Updated At:</strong><br>
                    <%= new Date(submission.updatedAt).toLocaleString('en-US') %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteSubmission(submissionId) {
        if (!confirm('Are you sure you want to delete this submission? This action cannot be undone.')) {
            return;
        }

        fetch(`/v1/api/admin/submissions/${submissionId}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${getToken()}`
            }
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                alert('Submission deleted successfully!');
                window.location.href = '/admin/submissions';
            } else {
                alert('Error: ' + (data.message || 'Unknown error'));
            }
        })
        .catch(err => {
            console.error('Error deleting submission:', err);
            alert('Error: ' + (err.message || 'Failed to delete submission'));
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>

