<%- include('../partials/header', { title: 'Exams Management', currentPage: 'exams', user: user }) %>

<div class="exams-page">
    <div class="page-header mb-3">
        <div class="page-actions">
            <button class="btn btn-primary" onclick="refreshExams()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" onsubmit="filterExams(event)">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="status" id="statusFilter" class="form-select">
                            <option value="">All</option>
                            <option value="published">Published</option>
                            <option value="draft">Draft</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" id="searchFilter" class="form-control" placeholder="Name or description...">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Exams Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Exams List (<span><%= exams.length || 0 %></span>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Owner</th>
                            <th>Status</th>
                            <th>Duration</th>
                            <th>Total Marks</th>
                            <th>Questions</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (exams && exams.length > 0) { %>
                            <% exams.forEach(exam => { %>
                                <tr>
                                    <td><code><%= exam._id.toString().substring(0, 8) %>...</code></td>
                                    <td><%= exam.name %></td>
                                    <td><%= exam.ownerId ? (exam.ownerId.name || exam.ownerId.email || 'N/A') : 'N/A' %></td>
                                    <td>
                                        <span class="badge bg-<%= exam.status === 'published' ? 'success' : 'warning' %>">
                                            <%= exam.status === 'published' ? 'Published' : 'Draft' %>
                                        </span>
                                    </td>
                                    <td><%= exam.duration || 0 %> minutes</td>
                                    <td><%= exam.totalMarks || 0 %></td>
                                    <td><%= exam.questions ? exam.questions.length : 0 %></td>
                                    <td><%= new Date(exam.createdAt).toLocaleDateString('en-US') %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/exams/<%= exam._id %>" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" onclick="deleteExam('<%= exam._id %>', '<%= exam.name %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="text-center">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Bootstrap Pagination -->
            <% if (pagination && pagination.pages > 1) { %>
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page - 1 %>)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        <% 
                            let startPage = Math.max(1, pagination.page - 2);
                            let endPage = Math.min(pagination.pages, pagination.page + 2);
                            for (let i = startPage; i <= endPage; i++) { 
                        %>
                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= pagination.page + 1 %>)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPage = <%= pagination?.page || 1 %>;
    let currentFilters = {};

    function filterExams(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        currentFilters = {
            status: formData.get('status') || '',
            search: formData.get('search') || ''
        };
        currentPage = 1;
        loadExams();
    }

    function clearFilters() {
        document.getElementById('statusFilter').value = '';
        document.getElementById('searchFilter').value = '';
        currentFilters = {};
        currentPage = 1;
        loadExams();
    }

    function goToPage(page) {
        currentPage = page;
        loadExams();
    }

    function loadExams() {
        const params = new URLSearchParams({ page: currentPage, ...currentFilters });
        window.location.href = `/admin/exams?${params.toString()}`;
    }

    function refreshExams() {
        loadExams();
    }

    function deleteExam(examId, examName) {
        if (!confirm(`Are you sure you want to delete exam "${examName}"? This action cannot be undone.`)) {
            return;
        }

        fetch(`/v1/api/exams/${examId}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${getToken()}`
            }
        })
        .then(res => {
            if (!res.ok) {
                return res.json().then(err => Promise.reject(err));
            }
            return res.json();
        })
        .then(data => {
            if (data.ok) {
                alert('Exam deleted successfully!');
                loadExams();
            } else {
                alert('Error: ' + (data.message || 'Unknown error'));
            }
        })
        .catch(err => {
            console.error('Error deleting exam:', err);
            alert('Error: ' + (err.message || 'Failed to delete exam'));
        });
    }

    function getToken() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            const [name, value] = cookie.trim().split('=');
            if (name === 'admin_token') return value;
        }
        return '';
    }
</script>

<%- include('../partials/footer') %>
