<%- include('../partials/header', { title: title, currentPage: 'organizations', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Organization Details</h2>
        <div>
            <a href="/admin/organizations/<%= organization._id %>/edit" class="btn btn-primary me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/admin/organizations" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Organizations
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Organization Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>ID:</strong><br>
                    <code><%= organization._id %></code>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Name:</strong><br>
                    <%= organization.name || 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Domain:</strong><br>
                    <%= organization.domain || 'N/A' %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Plan:</strong><br>
                    <span class="badge bg-<%= organization.plan === 'free' ? 'secondary' : organization.plan === 'pro' ? 'primary' : 'success' %>">
                        <%= organization.plan === 'free' ? 'Free' : organization.plan === 'pro' ? 'Pro' : 'Enterprise' %>
                    </span>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Users:</strong><br>
                    <%= organization.userCount || 0 %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Max Students:</strong><br>
                    <%= organization.settings?.maxStudents || 100 %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Max Exams:</strong><br>
                    <%= organization.settings?.maxExams || 10 %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Created At:</strong><br>
                    <%= <% 
    const organizati = new Date(organization.createdAt);
    const day = String(organizati.getDate()).padStart(2, '0');
    const month = String(organizati.getMonth() + 1).padStart(2, '0');
    const year = organizati.getFullYear();
    const hours = String(organizati.getHours()).padStart(2, '0');
    const minutes = String(organizati.getMinutes()).padStart(2, '0');
    const seconds = String(organizati.getSeconds()).padStart(2, '0');
  %><%= `${day}/${month}/${year} ${hours}:${minutes}:${seconds}` %> %>
                </div>
                <div class="col-md-6 mb-3">
                    <strong>Updated At:</strong><br>
                    <%= <% 
    const organizati = new Date(organization.updatedAt);
    const day = String(organizati.getDate()).padStart(2, '0');
    const month = String(organizati.getMonth() + 1).padStart(2, '0');
    const year = organizati.getFullYear();
    const hours = String(organizati.getHours()).padStart(2, '0');
    const minutes = String(organizati.getMinutes()).padStart(2, '0');
    const seconds = String(organizati.getSeconds()).padStart(2, '0');
  %><%= `${day}/${month}/${year} ${hours}:${minutes}:${seconds}` %> %>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>

