<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Dashboard' %> - EduMap</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-graduation-cap"></i> EduMap Admin</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="nav-item <%= currentPage === 'users' ? 'active' : '' %>">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/organizations" class="nav-item <%= currentPage === 'organizations' ? 'active' : '' %>">
                    <i class="fas fa-building"></i>
                    <span>Organizations</span>
                </a>
                <a href="/admin/analytics" class="nav-item <%= currentPage === 'analytics' ? 'active' : '' %>">
                    <i class="fas fa-chart-bar"></i>
                    <span>Analytics</span>
                </a>
                <a href="/admin/exams" class="nav-item <%= currentPage === 'exams' ? 'active' : '' %>">
                    <i class="fas fa-file-alt"></i>
                    <span>Exams</span>
                </a>
                <a href="/admin/submissions" class="nav-item <%= currentPage === 'submissions' ? 'active' : '' %>">
                    <i class="fas fa-clipboard-check"></i>
                    <span>Submissions</span>
                </a>
                <a href="/admin/chat-sessions" class="nav-item <%= currentPage === 'chat-sessions' ? 'active' : '' %>">
                    <i class="fas fa-comments"></i>
                    <span>Chat Sessions</span>
                </a>
                <a href="/admin/chat-history" class="nav-item <%= currentPage === 'chat-history' ? 'active' : '' %>">
                    <i class="fas fa-history"></i>
                    <span>Chat History</span>
                </a>
                <a href="/admin/questions" class="nav-item <%= currentPage === 'questions' ? 'active' : '' %>">
                    <i class="fas fa-question-circle"></i>
                    <span>Questions</span>
                </a>
                <a href="/admin/classes" class="nav-item <%= currentPage === 'classes' ? 'active' : '' %>">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Classes</span>
                </a>
                <a href="/admin/proctor-logs" class="nav-item <%= currentPage === 'proctor-logs' ? 'active' : '' %>">
                    <i class="fas fa-shield-alt"></i>
                    <span>Proctor Logs</span>
                </a>
            </nav>
            <div class="sidebar-footer">
                <a href="/v1/api/auth/logout" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="topbar-left">
                    <h1><%= title || 'Admin Dashboard' %></h1>
                </div>
                <div class="topbar-right">
                    <div class="user-info">
                        <i class="fas fa-user-circle"></i>
                        <span><%= user?.name || 'Admin' %></span>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="content-area">

